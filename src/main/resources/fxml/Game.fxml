<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.GameController" style="-fx-background-color: #2a2e3f;">

    <center>
        <HBox spacing="0">
            <!-- LEFT SIDEBAR -->
            <VBox spacing="0" style="-fx-min-width: 260; -fx-max-width: 260; -fx-background-color: #1a1e2e; -fx-padding: 15;">

                <!-- BOARD -->
                <VBox spacing="8" style="-fx-border-color: #00d4ff; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-color: #0a0e1f; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0, 212, 255, 0.5), 12, 0, 0, 0);">
                    <Label text="BOARD" style="-fx-text-fill: #00d4ff; -fx-font-size: 14; -fx-font-weight: bold;"/>
                </VBox>

                <Region minHeight="15" maxHeight="15"/>

                <!-- SCORE -->
                <VBox spacing="8" style="-fx-border-color: #00d4ff; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-color: #0a0e1f; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0, 212, 255, 0.5), 12, 0, 0, 0);">
                    <Label text="SCORE" style="-fx-text-fill: #00d4ff; -fx-font-size: 14; -fx-font-weight: bold;"/>
                    <Label fx:id="scoreLabel" text="0" style="-fx-text-fill: #ffffff; -fx-font-size: 32; -fx-font-weight: bold;"/>
                </VBox>

                <Region minHeight="15" maxHeight="15"/>

                <!-- LIVES -->
                <VBox spacing="8" style="-fx-border-color: #ff00ff; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-color: #0a0e1f; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(255, 0, 255, 0.5), 12, 0, 0, 0);">
                    <Label text="LIVES" style="-fx-text-fill: #ff00ff; -fx-font-size: 14; -fx-font-weight: bold;"/>
                    <Label fx:id="livesLabel" text="3" style="-fx-text-fill: #ffffff; -fx-font-size: 32; -fx-font-weight: bold;"/>
                </VBox>

                <Region minHeight="15" maxHeight="15"/>

                <!-- LEVEL -->
                <VBox spacing="8" style="-fx-border-color: #00ff00; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-color: #0a0e1f; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0, 255, 0, 0.5), 12, 0, 0, 0);">
                    <Label text="LEVEL" style="-fx-text-fill: #00ff00; -fx-font-size: 14; -fx-font-weight: bold;"/>
                    <Label fx:id="levelLabel" text="1" style="-fx-text-fill: #ffffff; -fx-font-size: 32; -fx-font-weight: bold;"/>
                </VBox>

                <Region minHeight="15" maxHeight="15"/>

                <!-- POWER-UPS -->
                <VBox spacing="8" style="-fx-border-color: #9d4edd; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-color: #0a0e1f; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(157, 78, 221, 0.5), 12, 0, 0, 0);">
                    <Label text="POWER-UPS" style="-fx-text-fill: #9d4edd; -fx-font-size: 14; -fx-font-weight: bold;"/>
                    <Label fx:id="powerUpsLabel" text="No active power-ups" style="-fx-text-fill: #888888; -fx-font-size: 11; -fx-wrap-text: true;"/>
                </VBox>

                <!-- Hidden elements for backend -->
                <Label fx:id="coinsLabel" text="Coins: 0" visible="false" managed="false"/>
                <Label fx:id="hintLabel" text="" visible="false" managed="false"/>
                <Button fx:id="backButton" text="Menu" visible="false" managed="false"/>
                <Button fx:id="item1Button" visible="false" managed="false"/>
                <Button fx:id="item2Button" visible="false" managed="false"/>
                <Button fx:id="item3Button" visible="false" managed="false"/>
            </VBox>

            <!-- RIGHT: Game area -->
            <StackPane HBox.hgrow="ALWAYS" style="-fx-background-color: #1a1e2e;">
                <!-- Game canvas -->
                <AnchorPane fx:id="anchorPane" style="-fx-background-color: #0a0e1f; -fx-border-color: #00d4ff; -fx-border-width: 3;">
                    <!-- Paddle -->
                    <Rectangle fx:id="paddle" x="350" y="550" width="100" height="15" fill="#00d4ff" style="-fx-effect: dropshadow(gaussian, rgba(0, 212, 255, 0.8), 10, 0, 0, 0);"/>

                    <!-- Ball -->
                    <Circle fx:id="ball" centerX="400" centerY="500" radius="8" fill="#ff4444" style="-fx-effect: dropshadow(gaussian, rgba(255, 68, 68, 0.8), 10, 0, 0, 0);"/>
                </AnchorPane>

                <!-- Pause button overlay (top right) -->
                <HBox alignment="TOP_RIGHT" StackPane.alignment="TOP_RIGHT" style="-fx-padding: 15;">
                    <Button fx:id="pauseButton" text="II" style="-fx-padding: 10 15; -fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #00d4ff; -fx-background-color: transparent; -fx-border-color: #7b68ee; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(123, 104, 238, 0.6), 10, 0, 0, 0); -fx-cursor: hand;"/>
                </HBox>
            </StackPane>
        </HBox>
    </center>
</BorderPane>