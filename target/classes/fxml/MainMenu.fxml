<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Circle?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.MainMenuController"
            prefWidth="600" prefHeight="800"
            style="-fx-background-image: url('/images/3-31.jpg');
                   -fx-background-size: cover;
                   -fx-background-repeat: no-repeat;
                   -fx-background-position: center;">

    <children>
        <!-- Star field background -->
        <Circle radius="2" centerX="50" centerY="60"  style="-fx-fill: white; -fx-opacity: 0.9;"/>
        <Circle radius="1.5" centerX="140" centerY="110" style="-fx-fill: white; -fx-opacity: 0.7;"/>
        <Circle radius="1" centerX="230" centerY="40"  style="-fx-fill: white; -fx-opacity: 0.8;"/>
        <Circle radius="1.5" centerX="360" centerY="90" style="-fx-fill: white; -fx-opacity: 0.6;"/>
        <Circle radius="2" centerX="470" centerY="55"  style="-fx-fill: white; -fx-opacity: 0.9;"/>
        <Circle radius="1" centerX="560" centerY="80"  style="-fx-fill: white; -fx-opacity: 0.7;"/>
        <Circle radius="1.5" centerX="100" centerY="170" style="-fx-fill: white; -fx-opacity: 0.8;"/>
        <Circle radius="1"   centerX="210" centerY="200" style="-fx-fill: white; -fx-opacity: 0.6;"/>
        <Circle radius="2"   centerX="310" centerY="180" style="-fx-fill: white; -fx-opacity: 0.9;"/>
        <Circle radius="1.5" centerX="410" centerY="210" style="-fx-fill: white; -fx-opacity: 0.7;"/>
        <Circle radius="1"   centerX="510" centerY="190" style="-fx-fill: white; -fx-opacity: 0.8;"/>

        <!-- Title -->
        <Label text="SPACE BREAKER"
               layoutX="110" layoutY="60"
               style="-fx-font-size: 48px; -fx-font-weight: bold;
                      -fx-text-fill: linear-gradient(to right, #00ffff, #ff00ff);
                      -fx-effect: dropshadow(gaussian, #00ffff, 20, 0.8, 0, 0);"/>

        <!-- Main Menu VBox -->
        <VBox fx:id="menuBox" spacing="12" prefWidth="320"
              AnchorPane.leftAnchor="140"
              AnchorPane.rightAnchor="140"
              AnchorPane.topAnchor="220"
              AnchorPane.bottomAnchor="80"
              style="-fx-background-color: rgba(255,255,255,0.04); -fx-background-radius: 16; -fx-padding: 24;"
              alignment="CENTER">

            <Button fx:id="startButton" text="â–¶ Start Game" prefWidth="260" prefHeight="48"
                    onAction="#startGame"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-background-color: linear-gradient(to bottom, #22c55e, #16a34a);
                           -fx-text-fill: white; -fx-background-radius: 12;
                           -fx-effect: dropshadow(gaussian, #22c55e, 16, 0.7, 0, 0);
                           -fx-cursor: hand;"/>

            <Button fx:id="shopButton" text="ðŸ› Shop" prefWidth="260" prefHeight="48"
                    onAction="#openShop"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-background-color: linear-gradient(to bottom, #4facfe, #00f2fe);
                           -fx-text-fill: white; -fx-background-radius: 12;
                           -fx-effect: dropshadow(gaussian, #00f2fe, 16, 0.7, 0, 0);
                           -fx-cursor: hand;"/>

            <Button fx:id="settingsButton" text="âš™ Settings" prefWidth="260" prefHeight="48"
                    onAction="#openSettings"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-background-color: linear-gradient(to bottom, #a855f7, #7c3aed);
                           -fx-text-fill: white; -fx-background-radius: 12;
                           -fx-effect: dropshadow(gaussian, #a855f7, 16, 0.7, 0, 0);
                           -fx-cursor: hand;"/>

            <Button fx:id="leaderboardButton" text="ðŸ† Leaderboard" prefWidth="260" prefHeight="48"
                    onAction="#openLeaderboard"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-background-color: linear-gradient(to bottom, #f59e0b, #d97706);
                           -fx-text-fill: white; -fx-background-radius: 12;
                           -fx-effect: dropshadow(gaussian, #f59e0b, 16, 0.7, 0, 0);
                           -fx-cursor: hand;"/>

            <Button fx:id="helpButton" text="â“ Help" prefWidth="260" prefHeight="48"
                    onAction="#openHelp"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-background-color: linear-gradient(to bottom, #ec4899, #be185d);
                           -fx-text-fill: white; -fx-background-radius: 12;
                           -fx-effect: dropshadow(gaussian, #ec4899, 16, 0.7, 0, 0);
                           -fx-cursor: hand;"/>

            <Button fx:id="exitButton" text="âœ• Exit" prefWidth="260" prefHeight="48"
                    onAction="#exitGame"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-background-color: linear-gradient(to bottom, #ef4444, #dc2626);
                           -fx-text-fill: white; -fx-background-radius: 12;
                           -fx-effect: dropshadow(gaussian, #ef4444, 16, 0.7, 0, 0);
                           -fx-cursor: hand;"/>
        </VBox>
    </children>
</AnchorPane>
